        <dt>
            Assigned Roles:
        </dt>
        <dd>
            <ul>
                @foreach (string r in ViewBag.Roles)
                {
                    <li>
                        <strong>
                            @r @Html.ActionLink("Remove Role", "RemoveRole",
                      new { ID = Model.Id, Role = r })
                        </strong>
                        @if (r == "Administrator") 
                        {
                           <span style="color: red; font-weight: bold;"> @ViewBag.Error</span>
                        }
                    </li>


                }
            </ul>
        </dd>
        <dt>
            UnAssigned Roles:
        </dt>
        <dd>
            <ul>
                @foreach (string r in ViewBag.NoRoles)
                {
                    <li>
                        <strong>
                            @r @Html.ActionLink("Add Role", "AddRole",
                      new { ID = Model.Id, Role = r })
                        </strong>
                    </li>


                }
            </ul>
        </dd>

    </dl>
